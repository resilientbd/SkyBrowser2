<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepage"
    android:weightSum="1">

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText1"
        android:background="#fff000"
        android:text="GO"
        android:textColor="#ff0000" />

    <EditText
        android:background="#fff000"
        android:layout_height="50dp"
        android:layout_width="280dp"
        android:textColor="#ff0000"
        android:id="@+id/editText1"
        android:hint="Type Your URL Here"
        android:ems="1"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/button1"/>

    <Button
        android:id="@+id/choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view12"
        android:layout_toEndOf="@+id/button1"
        android:background="#ff0000"
        android:text="select" />


    <View
        android:id="@+id/view12"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"
        android:background="#3bbdfa" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="1"
        >
    <Button
        android:id="@+id/fb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:text="facebook"
        android:layout_weight=".25"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ff0000"/>
    <Button
            android:id="@+id/cricket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gg1"
            android:layout_toEndOf="@+id/gg1"
            android:text="cricbuzz"
            android:layout_weight=".25"
            android:background="#fff000"
            android:textColor="#ff0000"
        />
    <Button
        android:id="@+id/you1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gg1"
        android:layout_toEndOf="@+id/gg1"
        android:text="youtube"
        android:layout_weight=".25"
        android:background="#ff0000"
        android:textColor="#fff000"/>

    <Button
        android:id="@+id/gog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:text="google"
        android:layout_weight=".25"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff000"/>


    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView1"
        android:layout_marginTop="100dp"
        >

    </WebView>



</RelativeLayout>